{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "astal/gtk4",
    "strict": true,
    "outDir": "build",
    "rootDir": ".",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "astal/*": ["/usr/share/astal/gjs/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["build", "node_modules"]
}
